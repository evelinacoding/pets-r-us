<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pets-R-Us Appointments</title>
</head>
<body>
    <%- include('./partials/_header.ejs') %>

    <div class="container">
        <h1 id="spacing">Book an Appointment With Us!</h1>
        <form action="/appointments" method="post" id="appointment-container">
            <label for="userName">User Name:</label>
            <input type="text" id="userName" name="userName" required><br>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required><br>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required><br>
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required><br>
            <select name="service" id="service" required>
                <% services.forEach((service) => { %>
                    <option value="<%= service.value %>"><%= service.text  %></option>
                <% }) %>
            </select><br>

            <button type="submit" class="btn">Create Appointment</button>
        </form>
        <%- include('./partials/_footer.ejs') %>
    </div>
    
</body>
</html>